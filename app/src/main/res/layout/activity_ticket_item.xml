<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:paddingBottom="25dp"
    tools:context=".TicketItem">

    <RelativeLayout
        android:id="@+id/rectangle"
        android:layout_width="343dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_3">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="23dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="14 DES 2023. 10:30"
            android:textColor="@color/white"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:gravity="top"/>

        <TextView
            android:id="@+id/book_no_230"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="193dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Book No."
            android:textColor="@color/white"
            android:lineSpacingExtra="10sp"
            android:translationY="-4.8sp"
            android:gravity="right|top"/>

        <TextView
            android:id="@+id/bookNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/book_no_230"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="10sp"
            android:text="230719-0001"
            android:textColor="@color/white"
            android:translationY="-4.8sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/poName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="57dp"
        android:text="Gunung Harta"
        android:gravity="top"/>

    <TextView
        android:id="@+id/poNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="57dp"
        android:gravity="top"
        android:lineSpacingExtra="10sp"
        android:text="P 1923 NM"
        android:translationY="4.8sp"/>

    <TextView
        android:id="@+id/startAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:text="07:00"
        android:gravity="right|top"/>

    <TextView
        android:id="@+id/startTerminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="77dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:text="Terminal Bungurasih"
        android:lineSpacingExtra="10sp"
        android:translationY="5.3sp"
        android:gravity="top"/>

    <TextView
        android:id="@+id/endTerminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="77dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:text="Surabaya"
        android:lineSpacingExtra="5.3sp"
        android:gravity="top"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="224dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        android:src="@drawable/ceklis"/>

    <TextView
        android:id="@+id/statusPembayaran"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="245dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        android:text="Lunas"
        android:gravity="top"/>
</RelativeLayout>